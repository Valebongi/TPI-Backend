<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
  <persistence-unit name="pu-backend" transaction-type="RESOURCE_LOCAL">
  <class>utnfc.isi.back.sim.domain.Camion</class>
  <class>utnfc.isi.back.sim.domain.Deposito</class>
  <class>utnfc.isi.back.sim.domain.Tarifa</class>
  <class>utnfc.isi.back.sim.domain.ParametroGlobal</class>

    <properties>
      <!-- PostgreSQL -->
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/tpi_backend_admin_db"/>
      <property name="jakarta.persistence.jdbc.user" value="postgres"/>
      <property name="jakarta.persistence.jdbc.password" value="postgres"/>

      <!-- Generación automática de esquema -->
      <property name="jakarta.persistence.schema-generation.database.action" value="none"/>

      <!-- Log SQL (opcional) -->
      <property name="hibernate.show_sql" value="false"/>
      <property name="hibernate.format_sql" value="true"/>

      <property name="hibernate.session.events.log" value="false"/>
      <property name="hibernate.generate_statistics" value="false"/>
    </properties>
  </persistence-unit>
</persistence>
